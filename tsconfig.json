{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["element-plus/global"],
    "importHelpers": true,
    // 文件路件解析时，基本的url
    "baseUrl": "./",
    // 路径解析
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./components.d.ts",
    "./auto-imports.d.ts",
    "./globalProperties.d.ts"
  ],
  // "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
